    <!-- fungsi console.log -->
    <script>
        console.log("Hello World!!");
        console.error("Ini pesan kesalahan!");
        console.warn("Ini pesan peringatan!");
        console.info("Ini pesan informasi.");
        console.clear();
        const data = [
        { name: "John", age: 30, city: "New York" },
        { name: "Alice", age: 25, city: "Los Angeles" },
        { name: "Bob", age: 35, city: "Chicago" }
        ];
        console.table(data);
        console.group("Group A");
        console.log("Pesan 1 di Group A");
        console.log("Pesan 2 di Group A");
        console.groupEnd();
        console.group("Group B");
        console.log("Pesan 1 di Group B");
        console.log("Pesan 2 di Group B");
        console.groupEnd();
    </script>
    <!-- fungsi alert -->
