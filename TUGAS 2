        document.write('<ul>');
        document.write('<li>Item 1</li>');
        document.write('<li>Item 2</li>');
        document.write('<li>Item 3</li>');
        document.write('</ul>');
        document.write('<input type="text" placeholder="Enter your name">');
        document.write('<div style="background-color: #999999; padding: 20px;">This is a div element</div>');
    </script>
